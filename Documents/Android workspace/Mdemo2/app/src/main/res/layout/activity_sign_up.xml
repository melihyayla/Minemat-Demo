<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.melih.mdemo2.SignUp"
    android:background="@drawable/bg">

    <TextView
        android:text="Healtcare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textColor="@android:color/background_light"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="81dp"
        tools:layout_editor_absoluteX="111dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Ad"
        android:ems="10"
        android:id="@+id/editText2"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:layout_marginTop="33dp"
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Soyad"
        android:ems="10"
        android:id="@+id/editText3"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText4"
        android:text="E-mail"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/white"
        android:layout_below="@+id/editText3"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,LabelFor" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Parola"
        android:ems="10"
        android:id="@+id/editText8"
        android:textColor="@android:color/white"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:fontFamily="sans-serif"
        android:textAlignment="viewStart"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText,LabelFor" />

    <CheckBox
        android:text="Kullanım şartlarını okudum, kabul ediyorum."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold"
        android:buttonTint="@android:color/background_light"
        android:checked="true"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <TextView
        android:text="Minemat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="9dp"
        tools:layout_editor_absoluteX="97dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Kayıt Ol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:textSize="30sp"
        android:textColor="#02cc78"
        style="@style/Widget.AppCompat.Button"
        android:background="@android:color/background_light"
        android:layout_below="@+id/editText8"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentEnd="true"
        tools:ignore="HardcodedText" />

</RelativeLayout>
